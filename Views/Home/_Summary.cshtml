        Cuisine: @Model.Cuisine
        <a class="btn btn-default" asp-action="Edit" asp-route-id="@Model.Id">編輯</a>
        <a class="btn btn-default" asp-action="Details" asp-route-id="@Model.Id">檢視</a>
    </div>
</section>